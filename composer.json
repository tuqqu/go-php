{
    "name": "tuqqu/go-php",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Arthur Kurbidaev",
            "email": "artkurbidaev@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "tuqqu/go-parser": "^0.4"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.0",
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "5.0.0-beta1"
    },
    "autoload": {
        "psr-4": {
            "GoPhp\\": "src/"
        },
        "files": [
            "src/asserts.php",
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "GoPhp\\Tests\\": "src/"
        }
    },
    "scripts": {
        "fix-cs": "vendor/bin/php-cs-fixer fix --diff --allow-risky=yes",
        "check-cs": "vendor/bin/php-cs-fixer fix --dry-run --verbose --diff --using-cache=no --allow-risky=yes",
        "analyse": "vendor/bin/psalm --config=psalm.xml --no-cache",
        "lint": [
            "@check-cs",
            "@analyse"
        ],
        "test-unit": "vendor/bin/phpunit --testsuite=unit",
        "test-functional": "vendor/bin/phpunit --testsuite=functional",
        "test": [
            "@test-unit",
            "@test-functional"
        ],
        "all-checks": [
            "@lint",
            "@test"
        ]
    }
}
